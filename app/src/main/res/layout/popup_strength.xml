<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="620dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/imageID"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/strength"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/technical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:text="EXTRA CURRICULAR ACTIVITIES"
        android:layout_below="@id/imageID"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Attended a workshop on IOT &amp; Robotics at Don Bosco, Yelagiri hills in August 2019.\n\n2. Presented a paper on Cyber &amp; Network Security at PMC Tech, Hosur in September 2019.\n\n3. Presented a paper on Ethical Hacking at Loyola College, Chennai in December 2019."
        android:lineSpacingExtra="18dp"
        android:textSize="18sp"
        android:layout_below="@id/technical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"/>

</RelativeLayout>